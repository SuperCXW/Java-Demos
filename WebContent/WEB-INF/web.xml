  <servlet>
    <servlet-name>serverdemo1</servlet-name>
    <servlet-class>ccc.serverdemo1</servlet-class>
    <init-param>
      <param-name>name</param-name>
      <param-value>gacl</param-value>
    </init-param>
    <init-param>
      <param-name>password</param-name>
      <param-value>123</param-value>
    </init-param>
    <init-param>
      <param-name>charset</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>serverdemo1</servlet-name>
    <url-pattern>/serverdemo1</url-pattern>
  </servlet-mapping>
</web-app>